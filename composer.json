{
	"name": "sourcebroker/t3api",
	"license": [
		"GPL-2.0-or-later"
	],
	"type": "typo3-cms-extension",
	"description": "REST API for your TYPO3 project. Config with annotations, build in filtering, pagination, typolinks, image processing, serialization contexts, responses in Hydra/JSON-LD format.",
	"authors": [
		{
			"name": "Inscript Team",
			"role": "Developer"
		}
	],
	"require": {
		"php": "^8.1.0",
		"ext-json": "*",
		"ext-tokenizer": "*",
		"ext-pdo": "*",
		"typo3/cms-core": "^12.4",
		"typo3/cms-extbase": "^12.4",
		"typo3/cms-frontend": "^12.4",
		"jms/serializer": "^3.1",
		"symfony/routing": "^5.0 || ^6.0",
		"symfony/expression-language": "^5.0 || ^6.0",
		"symfony/http-foundation": "^5.0 || ^6.0",
		"symfony/psr-http-message-bridge": "^2.1",
		"symfony/property-info": "^5.0 || ^6.0",
		"symfony/mime": "^5.0 || ^6.0",
		"symfony/cache": "^5.0 || ^6.0",
		"goldspecdigital/oooas": "^2.4",
		"phpdocumentor/reflection-docblock": "^5.1",
		"doctrine/annotations": "^1.0 || ^2.0"
	},
	"require-dev": {
		"typo3/cms-composer-installers": "^3.1.3 || 4.0.0-RC1 || ^5.0",
		"typo3/cms-install": "^11.5.24 || ^12.4.2",
		"typo3/cms-seo": "^11.5.24 || ^12.4.2",
		"typo3/testing-framework": "^7.0.4",
		"phpunit/phpunit": "^9.6.15",
		"typo3/coding-standards": "dev-update-rules",
		"friendsofphp/php-cs-fixer": "^3.47.1",
		"webmozart/assert": "^1.11.0"
	},
	"autoload": {
		"psr-4": {
			"SourceBroker\\T3api\\": "Classes"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"SourceBroker\\T3api\\Tests\\": "Tests"
		}
	},
	"replace": {
		"typo3-ter/t3api": "self.version"
	},
	"config": {
		"vendor-dir": ".Build/vendor",
		"bin-dir": ".Build/bin",
		"allow-plugins": {
			"typo3/cms-composer-installers": true,
			"typo3/class-alias-loader": true
		}
	},
	"scripts": {
		"cs": "php ./.Build/bin/php-cs-fixer fix  --dry-run -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./",
		"csfix": "php ./.Build/bin/php-cs-fixer fix  -v --config ./Build/php-cs-fixer/php-cs-fixer.php ./",
		"t3doc": "rm -rf ./Documentation-GENERATED-temp && docker-compose run --rm t3docmake && open \"Documentation-GENERATED-temp/Result/project/0.0.0/Index.html\"",
		"next-patch": "./Resources/Private/Php/nextVersion.php",
		"next-minor": "./Resources/Private/Php/nextVersion.php --version-type=minor",
		"next-major": "./Resources/Private/Php/nextVersion.php --version-type=major"
	},
	"extra": {
		"typo3/cms": {
			"extension-key": "t3api",
			"web-dir": ".Build/Web"
		}
	}
}
